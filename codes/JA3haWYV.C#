using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ArrayPractice
{
    class Program
    {
        static void Main(string[] args)
        {
            string[] names = new string[5];
            byte[] ages = new byte[5];
            byte counter = 0;
            Console.WriteLine("Welcome to my first attempt at using arrays in C#!");
                while (counter < 5)
                    {
                    Console.WriteLine("What is the name of Person #" + counter + "?");
                    names[counter] = Console.ReadLine();
                    Console.WriteLine("How old is Person #" + counter + "?");
                    ages[counter] = Console.ReadLine();
                    counter = counter + 1;
                    }
                if (counter = 5)
                    {
                    counter = 0;
                    }
                while (counter < 5)
                    {
                    Console.WriteLine("Person #" + counter + ":");
                    Console.WriteLine("Name: " + names[counter]);
                    Console.WriteLine("Age: " + ages[counter]);
                    Console.WriteLine();
                    counter = counter + 1;
                    }



        }
    }
}