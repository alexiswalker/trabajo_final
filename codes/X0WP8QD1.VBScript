Sub abcd()

Dim Liczby(10) As Double
Dim Srednia As Double
Srednia = 0
For i = 1 To 10
    Liczby(i) = InputBox("Podaj liczbę ", "Wprowadzanie")
    Srednia = Srednia + Liczby(i)
Next i
Srednia = Srednia / 10
Odp = msgbox("Średnia: " & Srednia, vbOKCancel, "Wynik")

End Sub

