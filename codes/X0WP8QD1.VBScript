Sub hijk()

Liczba1 = InputBox("Podaj liczbę ", "Wprowadzanie")
Liczba2 = InputBox("Podaj liczbę ", "Wprowadzanie")
If Not IsNumeric(Liczba1) And Not IsNumeric(Liczba2) Then
    msgbox "Obie oceny są nieprawidłowe"
ElseIf Not IsNumeric(Liczba1) Then
    msgbox "Ocena 1 jest nieprawidłowa"
ElseIf Not IsNumeric(Liczba2) Then
    msgbox "Ocena 2 jest nieprawidłowa"
Else
    msgbox "Oceny są prawidłowe"
End If

End Sub

