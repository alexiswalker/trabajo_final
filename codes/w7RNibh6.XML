<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="himaster.peminjamanruang.DetailPenyakitActivity"
    android:background="#b8dde0">

    <TextView
        android:id="@+id/tv_nama_penyakit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="[nama penyakit]"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_deskripsi_penyakit"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="[deskripsi penyakit]"/>

</LinearLayout>